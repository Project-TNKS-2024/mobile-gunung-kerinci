<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket.TiketFormDataPendakiActivity"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/border_back2"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiket"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@id/buttonBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/textIsiDataPendakian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendaki 1"
                    android:textSize="18sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textColor="@color/black2"
                    app:layout_constraintTop_toBottomOf="@id/buttonBack"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lytPastikan"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@id/textIsiDataPendakian"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_bgpastikan">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/background"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/border_pastikan"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_perhatikan"
                        app:layout_constraintTop_toTopOf="@id/background"
                        app:layout_constraintBottom_toBottomOf="@id/background"
                        app:layout_constraintStart_toStartOf="@id/background"
                        app:layout_constraintEnd_toEndOf="@id/background"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Semua pendaki harus memiliki ID Pendaki, buat akun untuk mendapatkan ID Pendaki"
                        android:textColor="@color/black2"
                        android:textSize="14sp"
                        android:fontFamily="@font/plus_jakarta_sans"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/background"
                        android:layout_marginStart="13dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Form Flipper (satu halaman, tapi bisa ganti antar pendaki) -->
                <ViewFlipper
                    android:id="@+id/viewFlipperPendaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/lytPastikan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Layout untuk Pendaki (akan ditambah dinamis via Kotlin jika perlu banyak) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <!-- ID Pendaki -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Pendaki"
                            android:textColor="@color/black2"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_semibold" />

                        <!-- SearchView mirip di gambar -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_counter_box"
                            android:layout_marginTop="5dp">

                            <EditText
                                android:id="@+id/inputIdPendaki"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:hint="Cari ID Pendaki"
                                android:background="@android:color/transparent"
                                android:paddingStart="12dp"
                                android:textSize="16sp"
                                android:textColor="@color/black2"
                                android:fontFamily="@font/plus_jakarta_sans_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/btnCariPendaki"/>

                            <ImageButton
                                android:id="@+id/btnCariPendaki"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_cari"
                                android:src="@drawable/ic_search"
                                android:contentDescription="search"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Nama Depan -->
                        <TextView
                            android:text="Nama Depan"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputNamaDepan"
                            style="@style/FormInputDisabled"/>

                        <!-- Nama Belakang -->
                        <TextView
                            android:text="Nama Belakang"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputNamaBelakang"
                            style="@style/FormInputDisabled"/>

                        <!-- Negara -->
                        <TextView
                            android:text="Negara"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputNegara"
                            style="@style/FormInputDisabled"/>

                        <!-- Tanggal Lahir -->
                        <TextView
                            android:text="Tanggal Lahir"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputTglLahir"
                            style="@style/FormInputDisabled"
                            android:hint="DD-MM-YYYY"/>

                        <!-- Usia -->
                        <TextView
                            android:text="Usia"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputUsia"
                            style="@style/FormInputDisabled"/>

                        <!-- No Telepon -->
                        <TextView
                            android:text="No. Telepon"
                            style="@style/FormLabelStyle"/>
                        <EditText
                            android:id="@+id/inputNoTelepon"
                            style="@style/FormInputDisabled"
                            android:hint="+62 8xx xxxx xxxx"/>

                        <!-- No Telepon Darurat -->
                        <TextView
                            android:text="No. Telepon Darurat"
                            style="@style/FormLabelStyle"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_counter_box">

                            <ImageView
                                android:id="@+id/flag"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_flag_indonesia"
                                android:padding="10dp"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <EditText
                                android:id="@+id/inputNoDarurat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:hint="+62 8xx xxxx xxxx"
                                android:background="@android:color/transparent"
                                android:paddingStart="8dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/plus_jakarta_sans_medium"
                                android:textColor="@color/black2"
                                app:layout_constraintStart_toEndOf="@+id/flag"
                                app:layout_constraintEnd_toEndOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No HP kerabat atau orang terdekat aktif"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:textColor="@color/grey"/>

                    </LinearLayout>

                </ViewFlipper>

                <!-- Navigation Buttons -->
                <LinearLayout
                    android:id="@+id/navigationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/viewFlipperPendaki"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/btnPrev"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@android:color/transparent"
                            android:visibility="gone">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/textPendakiPrev"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/plus_jakarta_sans_bold"
                                    android:textColor="@color/primary"
                                    android:text="Pendaki 1"
                                    app:layout_constraintStart_toEndOf="@id/brdPrev"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginStart="10dp"/>

                                <ImageView
                                    android:id="@+id/brdPrev"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/border_nepre"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <ImageView
                                    android:id="@+id/imgPrev"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_arrow_left"
                                    app:layout_constraintStart_toStartOf="@id/brdPrev"
                                    app:layout_constraintTop_toTopOf="@id/brdPrev"
                                    app:layout_constraintBottom_toBottomOf="@id/brdPrev"
                                    app:layout_constraintEnd_toEndOf="@id/brdPrev"/>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/btnNext"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@android:color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:id="@+id/textPendakiNext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/plus_jakarta_sans_bold"
                                    android:textColor="@color/primary"
                                    android:text="Pendaki 2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <ImageView
                                    android:id="@+id/brdNext"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/border_nepre"
                                    app:layout_constraintStart_toEndOf="@id/textPendakiNext"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginStart="10dp"/>

                                <ImageView
                                    android:id="@+id/imgNext"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_arrow_right"
                                    app:layout_constraintStart_toStartOf="@id/brdNext"
                                    app:layout_constraintTop_toTopOf="@id/brdNext"
                                    app:layout_constraintBottom_toBottomOf="@id/brdNext"
                                    app:layout_constraintEnd_toEndOf="@id/brdNext"/>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </FrameLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>