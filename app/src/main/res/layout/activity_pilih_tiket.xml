<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket.PilihTiketActivity"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="20dp">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/border_back2"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiket"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:textColor="@color/primary"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textPilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textColor="@color/black2"
        android:text="Pilih jenis paket tiket pendaki yang sesuai dengan pandakian Anda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTiket"
        android:layout_marginTop="15dp"/>

    <FrameLayout
        android:id="@+id/cardUmum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPilih"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="6dp"
        android:background="@drawable/border_pilihan"
        android:paddingTop="15dp"
        android:paddingBottom="18dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textUmum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UMUM"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/black2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/penUmum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="@string/pilUmum"
                android:textColor="@color/softgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textUmum"
                android:layout_marginTop="5dp"/>

            <FrameLayout
                android:id="@+id/buttonUmum"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/penUmum"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pesan"
                    android:background="@drawable/border_pesan"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:clickable="true"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cardRombongan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardUmum"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="6dp"
        android:background="@drawable/border_pilihan"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textRombongan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rombongan Pelajar/Mahasiswa"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/black2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/penRombongan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:text="@string/pilRom"
                android:textColor="@color/softgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textRombongan"
                android:layout_marginTop="5dp"/>

            <FrameLayout
                android:id="@+id/buttonRombongan"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/penRombongan"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pesan"
                    android:background="@drawable/border_pesan"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:clickable="true"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>