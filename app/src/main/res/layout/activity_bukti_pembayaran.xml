<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket.BuktiPembayaranActivity"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/border_back2"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textTiket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiket"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@id/buttonBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ====== RIWAYAT PEMBAYARAN ====== -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Pembayaran"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/black2"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_pembayaran2"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="15dp">

                <TableRow>
                    <TextView
                        android:id="@+id/tvTanggal"                        android:text="Tanggal"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:text="Status"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvKet"
                        android:text="Keterangan"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/btnLihatBukti"
                        android:text="Bukti"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>

                    <!-- TANGGAL-->
                    <TextView
                        android:text="-"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"/>

                    <!-- STATUS-->
                    <TextView
                        android:text="Menunggu"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/bg_status_menunggu"/>

                    <!-- TANGGAL-->
                    <TextView
                        android:text="-"
                        android:textSize="16sp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:textColor="@color/black2"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"/>

                    <!-- TANGGAL-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_eye"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"/>
                </TableRow>

            </TableLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imageUnduh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/textUnduh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unduh Invoice Pembayaran"
                    android:textSize="14sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textColor="@color/primary"
                    app:layout_constraintTop_toTopOf="@id/imageUnduh"
                    app:layout_constraintStart_toEndOf="@id/imageUnduh"
                    app:layout_constraintBottom_toBottomOf="@id/imageUnduh"
                    android:layout_marginStart="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- =============== RINCIAN PENDAKIAN =============== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_pembayaran2"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rincian Pemesanan"
                    android:textColor="@color/black2"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Nama Pemesan"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvNamaPemesan"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Diah Ambarwati"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Gerbang Masuk"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvGerbangMasuk"
                            android:text="Kersik Tuo"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Jumlah Anggota"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvJumlahAnggota"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="2 WNI + 1 WNA"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Gerbang Keluar"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                        <TextView
                            android:id="@+id/tvGerbangKeluar"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Camping Ground"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masuk"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium"/>

                        <TextView
                            android:id="@+id/tvTanggalMasuk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01 April 2025"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Keluar"
                            android:textColor="@color/softgrey"
                            android:textSize="14sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium"/>

                        <TextView
                            android:id="@+id/tvTanggalKeluar"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="02 April 2025"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:fontFamily="@font/plus_jakarta_sans_medium"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- =============== STATUS SUDAH DISETUJUI =============== -->
            <!-- muncul hanya jika status == "Disetujui" -->
            <LinearLayout
                android:id="@+id/layoutApproved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_bgdownsuk"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/background"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/border_sukses"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        app:layout_constraintTop_toTopOf="@id/background"
                        app:layout_constraintBottom_toBottomOf="@id/background"
                        app:layout_constraintStart_toStartOf="@id/background"
                        app:layout_constraintEnd_toEndOf="@id/background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran berhasil dilakukan"
                        android:textColor="@color/black2"
                        android:fontFamily="@font/plus_jakarta_sans"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="@id/background"
                        app:layout_constraintStart_toEndOf="@id/background"
                        app:layout_constraintBottom_toBottomOf="@id/background"
                        android:layout_marginStart="15dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- ====== BUTTON ====== -->

            <FrameLayout
                android:id="@+id/btnLihatTiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_blue2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Lihat Tiket"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"/>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/btnBeranda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Beranda"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>