<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="15dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_counter_box">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textPendaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendaki"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/numberPendaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/textPendaki"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/kurungAwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/numberPendaki"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/ketPendaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketua"
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/kurungAwal" />

        <TextView
            android:id="@+id/kurungAkhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textSize="18sp"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ketPendaki"/>

        <TextView
            android:id="@+id/textNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            app:layout_constraintTop_toBottomOf="@id/textPendaki"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="@id/textNama"
            app:layout_constraintStart_toEndOf="@id/textNama"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/namaPendaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diah Ambarwati"
            app:layout_constraintTop_toTopOf="@id/titikDua1"
            app:layout_constraintStart_toEndOf="@id/titikDua1"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textKewarganegaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kewarganegaraan"
            app:layout_constraintTop_toBottomOf="@id/textNama"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/textKewarganegaraan"
            app:layout_constraintStart_toEndOf="@id/textKewarganegaraan"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/kewarganegaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WNI"
            app:layout_constraintTop_toTopOf="@id/titikDua2"
            app:layout_constraintStart_toEndOf="@id/titikDua2"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textNoIden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Identitas"
            app:layout_constraintTop_toBottomOf="@id/textKewarganegaraan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="46dp"
            app:layout_constraintTop_toTopOf="@id/textNoIden"
            app:layout_constraintStart_toEndOf="@id/textNoIden"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/noIdentitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890123456"
            app:layout_constraintTop_toTopOf="@id/titikDua3"
            app:layout_constraintStart_toEndOf="@id/titikDua3"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textJeKal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            app:layout_constraintTop_toBottomOf="@id/textNoIden"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="43dp"
            app:layout_constraintTop_toTopOf="@id/textJeKal"
            app:layout_constraintStart_toEndOf="@id/textJeKal"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/jenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            app:layout_constraintTop_toTopOf="@id/titikDua4"
            app:layout_constraintStart_toEndOf="@id/titikDua4"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textTanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            app:layout_constraintTop_toBottomOf="@id/textJeKal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="44dp"
            app:layout_constraintTop_toTopOf="@id/textTanggalLahir"
            app:layout_constraintStart_toEndOf="@id/textTanggalLahir"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/tanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD - MM - YYYY"
            app:layout_constraintTop_toTopOf="@id/titikDua5"
            app:layout_constraintStart_toEndOf="@id/titikDua5"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            app:layout_constraintTop_toBottomOf="@id/textTanggalLahir"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="90dp"
            app:layout_constraintTop_toTopOf="@id/textAlamat"
            app:layout_constraintStart_toEndOf="@id/textAlamat"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3711, Koto Keras, Pesisir Bukir, Sungai Penuh, Jambi, Indonesia"
            app:layout_constraintTop_toTopOf="@id/titikDua6"
            app:layout_constraintStart_toEndOf="@id/titikDua6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textNoTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Telepon"
            app:layout_constraintTop_toBottomOf="@id/alamat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="52dp"
            app:layout_constraintTop_toTopOf="@id/textNoTel"
            app:layout_constraintStart_toEndOf="@id/textNoTel"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/noTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62 852 1234 5678"
            app:layout_constraintTop_toTopOf="@id/titikDua7"
            app:layout_constraintStart_toEndOf="@id/titikDua7"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

        <TextView
            android:id="@+id/textNoDar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Telpon Darurat"
            app:layout_constraintTop_toBottomOf="@id/textNoTel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/titikDua8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/textNoDar"
            app:layout_constraintStart_toEndOf="@id/textNoDar"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_semibold"/>

        <TextView
            android:id="@+id/noTeleponDarurat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62 852 1234 5678"
            app:layout_constraintTop_toTopOf="@id/titikDua8"
            app:layout_constraintStart_toEndOf="@id/titikDua8"
            android:layout_marginStart="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:fontFamily="@font/plus_jakarta_sans_medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>