            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="Email"
                android:textColor="@color/bluedark"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/textDesk"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTextLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="1dp"
                app:layout_constraintHorizontal_bias="0.0"
                tools:alpha="1"
                app:layout_constraintTop_toBottomOf="@id/textEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="7dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/input"
                    android:textColor="@color/bluedark"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="Password"
                android:textColor="@color/bluedark"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/emailTextLayout"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="1dp"
                app:endIconMode="password_toggle"
                tools:alpha="1"
                app:layout_constraintTop_toBottomOf="@id/textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="7dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pass"
                    android:textColor="@color/bluedark"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="Ulang Kata Sandi"
                android:textColor="@color/bluedark"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/passwordTextLayout"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password2TextLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="1dp"
                app:endIconMode="password_toggle"
                tools:alpha="1"
                app:layout_constraintTop_toBottomOf="@id/textPassword2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="7dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password2EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pass"
                    android:textColor="@color/bluedark"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonRegis"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/daftar"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/primary"
                app:layout_constraintTop_toBottomOf="@id/password2TextLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/atau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="atau"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textColor="@color/bluedark"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@id/buttonRegis"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/buttonGoogle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/atau"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_blue">

                <ImageView
                    android:id="@+id/iconGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google"/>

                <TextView
                    android:id="@+id/textLanjutGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="@string/google"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_marginStart="7dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textSudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun?"
                android:textSize="16sp"
                android:textColor="@color/bluedark"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="55dp"/>

            <TextView
                android:id="@+id/buttonLogNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk Sekarang"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:layout_marginStart="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="55dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
