<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <!--HEADER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/border_back2"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textAkun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akun"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@id/buttonBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!--CARD WARNING (Tampil jika belum isi data)-->

        <LinearLayout
            android:id="@+id/cardWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_bgpastikan"
            android:padding="15dp"
            android:layout_marginTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/background"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/border_pastikan"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_perhatikan"
                    app:layout_constraintTop_toTopOf="@id/background"
                    app:layout_constraintBottom_toBottomOf="@id/background"
                    app:layout_constraintStart_toStartOf="@id/background"
                    app:layout_constraintEnd_toEndOf="@id/background"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Segera isi biodata Anda untuk mendapatkan ID Pendaki dan akses pembelian tiket"
                    android:textColor="@color/black2"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/background"
                    android:layout_marginStart="13dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!--PROFILE SECTION-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/fotoWisata"
                android:transitionName="image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"
                app:shapeAppearanceOverlay="@style/CustomShapeRadius2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvUserName"
                    android:text="Diah Ambarwati"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textSize="20sp"/>

                <!--STATUS BELUM ISI-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatusBelum"
                    android:text="Akun belum di validasi"
                    android:textColor="@color/red"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:textSize="16sp"/>

                <!--STATUS SUDAH ISI (default invisible)-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStatusSudah"
                    android:text="ID Pendaki: FIE121153"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:visibility="gone"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- GARIS PEMISAH -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="20dp"/>

        <!--PENGATURAN AKUN-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan Akun"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>