<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Homepage.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/halo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:text="Halo,"
                    android:textSize="16sp"
                    android:textColor="@color/black2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diah"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/halo"
                    app:layout_constraintBottom_toBottomOf="@id/halo"
                    app:layout_constraintStart_toEndOf="@id/halo"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="@color/black2" />
                
                <FrameLayout
                    android:id="@+id/buttonNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp">
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/notif"
                        android:background="@drawable/circle_shape"
                        android:padding="5dp"
                        android:contentDescription="Notification Icon"/>
                    
                </FrameLayout>

                <TextView
                    android:id="@+id/selamat"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:text="SELAMAT DATANG DI GUNUNG KERINCI"
                    android:textColor="@color/primary"
                    android:textSize="28sp"
                    android:fontFamily="@font/plus_jakarta_sans_extrabold"
                    app:layout_constraintTop_toBottomOf="@id/halo"
                    app:layout_constraintStart_toStartOf="@id/halo"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="241dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/homeatas"
                    app:layout_constraintTop_toBottomOf="@id/selamat"
                    android:layout_marginTop="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    app:layout_constraintStart_toStartOf="@id/gambar"
                    app:layout_constraintEnd_toEndOf="@id/gambar"
                    app:layout_constraintTop_toTopOf="@id/gambar"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="200dp"
                    app:cardCornerRadius="8dp"
                    app:cardPreventCornerOverlap="false">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/suhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21Â°c"
                            android:fontFamily="@font/plus_jakarta_sans_bold"
                            android:textSize="18dp"
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:id="@+id/ketSuhu"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Gerimis Ringan"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:textSize="10dp"
                            android:textColor="@color/black2"
                            android:textAlignment="textStart"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginBottom="7dp"/>

                        <TextView
                            android:id="@+id/ketKota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solok Selatan"
                            android:fontFamily="@font/plus_jakarta_sans_semibold"
                            android:textSize="12dp"
                            android:textColor="@color/black2"
                            app:layout_constraintBottom_toBottomOf="@id/suhu"
                            app:layout_constraintStart_toEndOf="@id/suhu"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:id="@+id/iconStatus"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ket_status"
                            app:layout_constraintTop_toTopOf="@id/ketSuhu"
                            app:layout_constraintStart_toStartOf="@id/ketKota"
                            android:layout_marginTop="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waspada I"
                            android:textSize="12dp"
                            android:fontFamily="@font/plus_jakarta_sans_semibold"
                            android:textColor="@color/red"
                            app:layout_constraintStart_toEndOf="@id/iconStatus"
                            app:layout_constraintTop_toTopOf="@id/ketSuhu"
                            android:layout_marginStart="3dp"/>

                        <TextView
                            android:id="@+id/ttlPendaki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pendaki"
                            android:textSize="12sp"
                            android:fontFamily="@font/plus_jakarta_sans_semibold"
                            android:textColor="@color/black2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/suhu"
                            android:layout_marginEnd="15dp"/>

                        <TextView
                            android:id="@+id/saat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saat ini"
                            android:textSize="12sp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:textColor="@color/black2"
                            app:layout_constraintStart_toStartOf="@id/ttlPendaki"
                            app:layout_constraintTop_toTopOf="@id/ketSuhu"/>

                        <TextView
                            android:id="@+id/pendakiNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="18sp"
                            android:fontFamily="@font/plus_jakarta_sans_extrabold"
                            android:textColor="@color/black2"
                            app:layout_constraintStart_toStartOf="@id/orang"
                            app:layout_constraintBottom_toBottomOf="@id/suhu"/>

                        <TextView
                            android:id="@+id/per"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="18sp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:textColor="@color/black2"
                            app:layout_constraintEnd_toStartOf="@id/JmlpendakiNow"
                            app:layout_constraintBottom_toBottomOf="@id/suhu"
                            app:layout_constraintStart_toEndOf="@id/pendakiNow"/>

                        <TextView
                            android:id="@+id/JmlpendakiNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="12sp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:textColor="@color/black2"
                            app:layout_constraintStart_toEndOf="@id/per"
                            app:layout_constraintBottom_toBottomOf="@id/suhu"
                            android:layout_marginEnd="15dp"/>

                        <TextView
                            android:id="@+id/orang"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Orang"
                            android:textSize="12sp"
                            android:fontFamily="@font/plus_jakarta_sans"
                            android:textColor="@color/black2"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toStartOf="@id/saat"
                            app:layout_constraintTop_toTopOf="@id/ketSuhu"
                            android:layout_marginEnd="30dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiket Anda Saat Ini"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/layoutBelumAda"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_ticket"
                android:clickable="true">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/not_ticket"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anda belum membuat pesanan\nPesan Tiket Anda Sekarang!"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textAlignment="center"/>

            </LinearLayout>


            <FrameLayout
                android:id="@+id/buttonPesanTiket"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border_blue2"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus2"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="110dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan Tiket"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:layout_marginTop="10dp"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berkas"
                android:textColor="@color/black"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="45dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSOP"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/card">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sop"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="10dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPanduan"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/card">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_panduan"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="10dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="103dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOP"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panduan"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:textSize="14sp"
                    android:layout_marginStart="127dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/textBeritaTerkini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:textSize="20sp"
                    android:text="Wisata Alam TNKS"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textViewSelengkapnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Lainnya"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    app:layout_constraintTop_toTopOf="@id/textBeritaTerkini"
                    app:layout_constraintBottom_toBottomOf="@id/textBeritaTerkini"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_wisata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textBeritaTerkini"
                    tools:listitem="@layout/item_wisata" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>