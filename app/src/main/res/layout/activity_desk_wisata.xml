<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage.Wisata.DeskWisataActivity">

    <ImageView
        android:id="@+id/imageDesk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/splash2"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/hint"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/border_back2"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardKetinggian"
        android:layout_width="90dp"
        android:layout_height="35dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@id/JudulWisata"
        app:layout_constraintBottom_toTopOf="@id/JudulWisata"
        android:layout_marginBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Ketinggian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.085 mdpl"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textAlignment="center"
                android:fontFamily="@font/plus_jakarta_sans"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/JudulWisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Gunung Kerinci"
        android:textColor="@color/black2"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="@id/Lokasi"
        app:layout_constraintBottom_toTopOf="@id/Lokasi"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/Lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="@id/Deskripsi"
        app:layout_constraintBottom_toTopOf="@id/Deskripsi"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayu Aro, Provinsi Jambi"
        android:textColor="@color/abutua"
        android:textSize="14sp"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        app:layout_constraintTop_toTopOf="@id/Lokasi"
        app:layout_constraintStart_toEndOf="@id/Lokasi"
        android:layout_marginStart="7dp"/>

    <TextView
        android:id="@+id/Deskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_light"
        android:text="@string/Deskripsi"
        android:textColor="@color/black2"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@id/LebihBanyak"
        android:maxLines="5"
        app:layout_constraintBottom_toTopOf="@id/LebihBanyak"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/LebihBanyak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_light"
        android:text="Lebih Banyak"
        android:textColor="@color/primary"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_foto_wisata"
        app:layout_constraintStart_toStartOf="@id/recyclerView_foto_wisata"
        android:layout_marginBottom="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_foto_wisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_desk_wisata" />

</androidx.constraintlayout.widget.ConstraintLayout>